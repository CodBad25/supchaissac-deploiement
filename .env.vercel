# Variables d'environnement pour Vercel
# Copiez ces variables dans les paramètres de votre projet Vercel

# Base de données PostgreSQL (Neon, Supabase, ou autre)
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# Clé secrète pour les sessions (générez une clé forte)
SESSION_SECRET=your-super-secret-key-for-production-change-this

# Environnement
NODE_ENV=production

# Configuration serveur
PORT=5000
HOST=0.0.0.0

# Logs
LOG_LEVEL=warn

# Sécurité
HTTPS_ONLY=true
SECURE_COOKIES=true
TRUST_PROXY=true

# Informations établissement (optionnel)
SCHOOL_NAME="Votre Établissement"
SCHOOL_ADDRESS="Adresse de votre établissement"
SCHOOL_PHONE="Téléphone"
SCHOOL_EMAIL="contact@votre-etablissement.fr"

# RGPD et conformité (optionnel)
DATA_RETENTION_YEARS=5
DPO_NAME="Nom du DPO"
DPO_EMAIL="dpo@votre-etablissement.fr"
